<Window x:Class="InvoiceGenerator.EditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InvoiceGenerator"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="EditWindow" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="356">
            <TextBox x:Name="Username" materialDesign:HintAssist.Hint="Username" materialDesign:HintAssist.IsFloating="True" Margin="0 0 0 20"></TextBox>
            <TextBox x:Name="Address" materialDesign:HintAssist.Hint="Address" materialDesign:HintAssist.IsFloating="True" Margin="0 0 0 20"></TextBox>
            <TextBox x:Name="Cif" materialDesign:HintAssist.Hint="CIF" materialDesign:HintAssist.IsFloating="True" Margin="0 0 0 20"></TextBox>
            <TextBox x:Name="Phone" materialDesign:HintAssist.Hint="Phone number" materialDesign:HintAssist.IsFloating="True" Margin="0 0 0 20"></TextBox>
            <Button Click="UpdateUserButton_Click">Update</Button>
        </StackPanel>
    </Grid>
</Window>
